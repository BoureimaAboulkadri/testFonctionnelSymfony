<form class="form-delete" method="post" action="{{ path('app_article_delete', {'id': article.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ article.id) }}">

    {% if (is_granted("ROLE_USER", article)) %}
        <button class="btn btn-danger">Delete</button>
    {% else %}
        <button class="btn btn-secondary disabled">Delete</button>
    {% endif %}
</form>
